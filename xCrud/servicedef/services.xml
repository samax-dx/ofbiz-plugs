<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>XCrud Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service>

    <service engine="groovy" name="insertXPair"
    	location="component://xCrud/groovyScripts/XCrudServices.groovy"
    	invoke="insertXPair" auth="true">
    	<attribute name="itemKey" mode="IN" type="String"
    		optional="false">
    	</attribute>
    	<attribute name="itemValue" mode="IN" type="String"
    		optional="false">
    	</attribute>
    </service>
    <service engine="groovy" name="getXPairs" location="component://xCrud/groovyScripts/XCrudServices.groovy" invoke="getXPairs" auth="true">
    	<description>Get all XPairs</description>
    </service><service name="getXPair" engine="groovy" location="component://xCrud/groovyScripts/XCrudServices.groovy" invoke="getXPair" auth="true">
        <description>Get XPair by ID</description>
        <attribute name="xpairId" type="String" mode="IN" optional="false"/>
    </service>
	<service engine="groovy" name="updateXPair"
		location="component://xCrud/groovyScripts/XCrudServices.groovy"
		invoke="updateXPair" auth="true">
		<description>Update XPair by ID</description>
		<attribute name="xpairId" mode="IN" type="String"
			optional="false">
		</attribute>
		<attribute name="itemKey" mode="IN" type="String"
			optional="true">
		</attribute>
		<attribute name="itemValue" mode="IN" type="String"
			optional="true">
		</attribute>
	</service>
	<service engine="groovy" name="deleteXPair"
		location="component://xCrud/groovyScripts/XCrudServices.groovy"
		invoke="deleteXPair" auth="true">
		<attribute name="xpairId" mode="IN" type="String"
			optional="false">
		</attribute>
	</service>
	

</services>